            <Setter TargetName="rightBottomBorder"
                    Property="Background"
                    Value="{StaticResource headerHotHighlightHorizontalBackgroundBrush3}" />

            <Setter TargetName="rightBorder"
                    Property="Visibility"
                    Value="Hidden" />

         </Trigger>

         <!-- Display FilterToggleButton Trigger on MouseOver -->
