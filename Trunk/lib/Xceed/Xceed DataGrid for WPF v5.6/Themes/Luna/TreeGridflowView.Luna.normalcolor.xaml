            <Setter TargetName="bottomBorder"
                    Property="Visibility"
                    Value="Hidden" />

            <Setter TargetName="thumbToggleBackgroundBorder"
                    Property="BorderThickness"
                    Value="0,1,0,0" />

            <Setter TargetName="rightPressedBorder"
                    Property="Visibility"
